<Window x:Class="Tommy_Sport_Hand_In.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tommy_Sport_Hand_In"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Margin="318,33,324,347" Text="{Binding Path=ListFilter, UpdateSourceTrigger=PropertyChanged}" Width="150"></TextBox>
        <ListView Name="CyclistListView" Grid.Row="1" Margin="4,178,12,13"  ItemsSource="{Binding Cyclists}"  >
            <ListView.View>
                <GridView x:Name="grdTest">
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"  Width="150"/>
                    <GridViewColumn Header="Gender" DisplayMemberBinding="{Binding Gender}"  Width="70"/>
                    <GridViewColumn Header="Country" DisplayMemberBinding="{Binding Country}"  Width="100"/>
                    <GridViewColumn Header="Result Time" DisplayMemberBinding="{Binding ResultTime}"  Width="100"/>
                    <GridViewColumn Header="EndPosition" DisplayMemberBinding="{Binding EndPosition}"  Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
